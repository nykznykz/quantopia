# =============================================================================
# Quantopia Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!
#
# Quick start:
#   cp .env.example .env
#   Edit .env with your API keys
#   source venv/bin/activate
#   python examples/quick_test.py
# =============================================================================

# -----------------------------------------------------------------------------
# LLM API Keys (Choose at least one)
# -----------------------------------------------------------------------------

# OpenAI API Key (Required for default configuration)
# Get from: https://platform.openai.com/api-keys
# Models: gpt-4, gpt-4-turbo, gpt-3.5-turbo
# Cost: ~$0.03/1K input tokens (GPT-4)
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic API Key (Optional - Best for code generation)
# Get from: https://console.anthropic.com/settings/keys
# Models: claude-opus-4, claude-sonnet-4, claude-haiku-4
# Cost: ~$3/MTok input, ~$15/MTok output (Sonnet)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# DeepSeek API Key (Optional - Budget option)
# Get from: https://platform.deepseek.com/
# Models: deepseek-coder, deepseek-chat
# Cost: ~$0.14/MTok (very cheap!)
DEEPSEEK_API_KEY=sk-your-deepseek-key-here

# Azure OpenAI (Optional - Enterprise option)
# Get from: https://portal.azure.com/
AZURE_OPENAI_KEY=your-azure-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2023-05-15

# -----------------------------------------------------------------------------
# LLM Configuration (Optional - Override defaults)
# -----------------------------------------------------------------------------

# Default LLM provider (openai, anthropic, deepseek, azure)
LLM_PROVIDER=openai

# Default model for strategy generation
# OpenAI: gpt-4, gpt-4-turbo, gpt-3.5-turbo
# Anthropic: claude-opus-4, claude-sonnet-4, claude-haiku-4
# DeepSeek: deepseek-coder, deepseek-chat
STRATEGY_GENERATION_MODEL=gpt-4

# Default model for code generation (recommend GPT-4 or Claude)
CODE_GENERATION_MODEL=gpt-4

# Temperature for strategy generation (0.0-1.0, higher = more creative)
STRATEGY_TEMPERATURE=0.7

# Temperature for code generation (0.0-0.3, lower = more deterministic)
CODE_TEMPERATURE=0.2

# Max tokens per API call (1000-4000 recommended)
MAX_TOKENS=2000

# -----------------------------------------------------------------------------
# Database Configuration (Optional)
# -----------------------------------------------------------------------------

# Database path (default: data/quantopia.db)
DATABASE_PATH=data/quantopia.db

# Enable database storage (true/false)
DATABASE_ENABLED=true

# -----------------------------------------------------------------------------
# Exchange API Keys (Optional - For real data fetching)
# -----------------------------------------------------------------------------

# Binance API (for downloading real OHLCV data)
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key

# Coinbase API (alternative exchange)
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_SECRET_KEY=your-coinbase-secret-key

# -----------------------------------------------------------------------------
# Research Configuration (Optional - Override defaults)
# -----------------------------------------------------------------------------

# Number of strategies to generate per batch (5-20 recommended)
NUM_STRATEGIES_PER_BATCH=10

# Maximum refinement attempts for failed strategies (1-3)
MAX_REFINEMENT_ATTEMPTS=2

# Number of variants to generate for successful strategies (2-5)
STRATEGY_FAMILY_SIZE=3

# Enable automatic refinement of failed strategies (true/false)
ENABLE_REFINEMENT=true

# Enable automatic family generation from successful strategies (true/false)
ENABLE_FAMILY_GENERATION=true

# -----------------------------------------------------------------------------
# Backtesting Configuration (Optional)
# -----------------------------------------------------------------------------

# Initial capital for backtesting (default: 10000)
INITIAL_CAPITAL=10000

# Slippage in basis points (default: 5.0 = 0.05%)
SLIPPAGE_BPS=5.0

# Maker fee percentage (default: 0.0)
MAKER_FEE=0.0

# Taker fee percentage (default: 0.025%)
TAKER_FEE=0.00025

# Maximum parallel workers for batch testing (default: CPU count)
MAX_WORKERS=4

# -----------------------------------------------------------------------------
# Filtering Criteria (Optional - Override defaults)
# -----------------------------------------------------------------------------

# Minimum Sharpe ratio for approval (default: 0.5)
MIN_SHARPE_RATIO=0.5

# Minimum total return for approval (default: 0.05 = 5%)
MIN_TOTAL_RETURN=0.05

# Maximum drawdown allowed (default: 0.30 = 30%)
MAX_DRAWDOWN=0.30

# Minimum number of trades (default: 10)
MIN_NUM_TRADES=10

# Minimum win rate (default: 0.30 = 30%)
MIN_WIN_RATE=0.30

# Minimum profit factor (default: 1.0)
MIN_PROFIT_FACTOR=1.0

# -----------------------------------------------------------------------------
# Logging Configuration (Optional)
# -----------------------------------------------------------------------------

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (leave empty to disable file logging)
LOG_FILE=logs/quantopia.log

# Enable console logging (true/false)
LOG_CONSOLE=true

# -----------------------------------------------------------------------------
# Advanced Configuration (Optional)
# -----------------------------------------------------------------------------

# Enable debug mode (more verbose logging)
DEBUG_MODE=false

# Retry attempts for API failures (1-5)
API_RETRY_ATTEMPTS=3

# Timeout for API calls in seconds (30-120)
API_TIMEOUT=60

# Cache directory for temporary files
CACHE_DIR=.cache

# Results export directory
RESULTS_DIR=results

# Data directory for OHLCV files
DATA_DIR=data

# -----------------------------------------------------------------------------
# Feature Flags (Optional - Enable experimental features)
# -----------------------------------------------------------------------------

# Enable walk-forward testing (Phase 2 feature)
ENABLE_WALK_FORWARD=false

# Enable regime analysis (Phase 2 feature)
ENABLE_REGIME_ANALYSIS=false

# Enable live trading integration (Phase 3 feature)
ENABLE_LIVE_TRADING=false

# Enable paper trading (Phase 3 feature)
ENABLE_PAPER_TRADING=false

# -----------------------------------------------------------------------------
# Notes
# -----------------------------------------------------------------------------
# 1. Only OPENAI_API_KEY (or another LLM key) is required to get started
# 2. All other settings have sensible defaults
# 3. Start with minimal configuration and add as needed
# 4. Never commit your actual .env file to git!
# 5. See docs/GETTING_STARTED_REAL_API.md for detailed setup instructions
