# Quantopia Configuration File
# Copy this to quantopia.yaml and customize

# LLM Configuration
# Note: API keys should be set in .env file, not here
# See .env.example for required environment variables
llm:
  provider: openai  # openai or azure (can be overridden by LLM_PROVIDER env var)
  model: gpt-4      # Model to use
  temperature: 0.7  # Creativity level (0-1)

# Database Configuration
database:
  path: data/strategies.db

# Machine Learning Configuration
ml:
  registry_dir: models/registry
  enable_background_improvement: true

# Agent Configuration
agents:
  exploration_rate: 0.3  # Balance between exploration and exploitation (0-1)
  max_refinement_attempts: 2
  strategy_family_size: 3

# Daemon Configuration
daemon:
  pid_file: data/quantopia.pid
  log_file: logs/quantopia.log

# Research Session Defaults
research:
  default_symbol: BTC-USD
  default_days: 365
  batch_size: 10
